---
import AFKTimeCalculator from '@/components/AFKTimeCalculator.astro'
import BrewStats from '@/components/BrewStats.astro'
import PlayerStats from '@/components/PlayerStats.astro'
import SaveToast from '@/components/SaveToast.astro'
import Layout from '@/layouts/Layout.astro'
---

<Layout title="LBR - Witch AFK Calculator">
  <main class="flex p-4 flex-col w-full md:max-w-[750px] gap-8">
    <header class="flex flex-row gap-4 items-center justify-center w-full mb-8">
      <img src="/images/witch.png" alt="Witch" class="size-12 md:size-24 -scale-x-100" />
      <h1 class="font-extrabold text-2xl md:text-4xl">Witch Calculator</h1>
      <img src="/images/witch.png" alt="Witch" class="size-12 md:size-24" />
    </header>

    <PlayerStats />
    <BrewStats />
    <AFKTimeCalculator />

    <SaveToast />
  </main>
</Layout>
